<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Client.MessengerWindow"
        mc:Ignorable="d"
        Title="Messenger" Height="640" Width="1024"
        Background="#222226"
        Closing="MessagerWindow_Closing"
        >
    <Grid>
        <Border MinHeight="50" Background="#444446" Height="40" VerticalAlignment="Bottom">
            <StackPanel>
                <Grid>
                    <TextBox Margin="17,10,157,61" Background="#A3A3A3" CaretBrush="#444446" Foreground="#444446" SelectionBrush="#A3A3A3" FontSize="15" x:Name="MessageBox"/>
                    <Button  Content="Отправить" Width="118" Margin="0,10,10,61" Click="SendMessage" HorizontalAlignment="Right" Background="#A3A3A3" Foreground="#464545" BorderBrush="#A3A3A3" />
                </Grid>
            </StackPanel>
        </Border>
        <TextBlock Margin="1,1,0,50" FontSize="15" TextWrapping ="Wrap" Foreground="#A3A3A3" x:Name="chat"/>
    </Grid>
</Window>
